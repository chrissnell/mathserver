<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="fibonacci">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="value" maxOccurs="unbounded" minOccurs="1">
          <xs:complexType>
            <xs:simpleContent>
              <xs:extension base="xs:long">
                <xs:attribute type="xs:long" name="index"/>
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>